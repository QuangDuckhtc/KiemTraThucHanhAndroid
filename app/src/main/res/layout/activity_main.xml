<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FACA00"
    android:hapticFeedbackEnabled="false"
    tools:context=".MainActivity" >

    <TextView

        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_width="136dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:text="LOGIN"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/pl_email"
        android:layout_width="338dp"
        android:layout_height="52dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="75dp"
        android:rotationX="13"
        android:textColor="#040303"
        android:textColorHint="#151111"
        android:textColorLink="#1B1717"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/pl_password"
        android:layout_width="334dp"
        android:layout_height="57dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="75dp"
        android:rotationX="17"
        android:textColorHint="#0C0B0B"
        app:layout_constraintEnd_toEndOf="@+id/pl_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pl_email"
        app:layout_constraintTop_toBottomOf="@+id/pl_email" />

    <Button
        android:id="@+id/btn_Submit"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:background="#151515"
        android:text="Button"
        android:textSize="15sp"
        app:backgroundTint="#0B0A0A"
        app:layout_constraintEnd_toEndOf="@+id/pl_password"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="@+id/pl_password"
        app:layout_constraintTop_toBottomOf="@+id/pl_password" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/pl_email"
        app:layout_constraintStart_toStartOf="@+id/pl_email"
        app:layout_constraintTop_toTopOf="@+id/pl_email"
        app:layout_constraintVertical_bias="0.526"
        app:srcCompat="@drawable/em" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="48dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/pl_password"
        app:layout_constraintStart_toStartOf="@+id/pl_password"
        app:layout_constraintTop_toTopOf="@+id/pl_password"
        app:srcCompat="@drawable/pas" />

    <TextView
        android:id="@+id/tx_exit"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="Exit"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Submit"
        app:layout_constraintVertical_bias="0.697" />
</androidx.constraintlayout.widget.ConstraintLayout>
